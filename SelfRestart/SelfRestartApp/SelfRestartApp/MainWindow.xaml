<Window x:Class="SelfRestartApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SelfRestartApp"
        mc:Ignorable="d"
        Title="自己再起動さんぷる" Height="350" Width="400">
    <StackPanel>
        <Label x:Name="ProcessIdLabel" Height="50"/>
        
        <Button Content="Restarter.exe" 
                Click="RestarterEXE_Clicked"
                Width="200" 
                Height="100"/>

        <Button Content="restarter.ps1" 
                Click="RestarterPS1_Clicked"
                Width="200" 
                Height="100"/>
    </StackPanel>
</Window>
